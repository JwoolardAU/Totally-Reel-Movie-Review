@model Movie


   <div class="text-center">
    <h1 class="display-4">@Model.Title</h1>
    <p>@Model.Genre</p>
    <p>Here is a quick overview of this movie</p>
</div>

    <h2>Movie Details</h2>
    <h3>Synopsis</h3>
    <p>@Model.Synopsis</p>
    <p>@Model.Details</p>

    <h3>Director</h3>
    <p>@Model.Director</p>
    <h3>Cast</h3>
     <ul>
             @foreach (var actor in Model.Cast)
             {
                <li>@actor</li>
             }
        </ul>


    <h2>Reviews/Comments</h2>
